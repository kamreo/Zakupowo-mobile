<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZakupowoMobile.Views.UserPanel.PasswordPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Margin="12"
                 Padding="24">
                <Label Text="Aktualne hasło"></Label>
                <Entry x:Name="oldPassword" IsPassword="true" Placeholder=""></Entry>
                <Label  Text="Nowe hasło"></Label>
                <Entry  x:Name="newPassword" IsPassword="true" Placeholder=""></Entry>
                <Label Text="Powtórz nowe hasło"></Label>
                <Entry x:Name="newPasswordRepeat" IsPassword="true" Placeholder=""></Entry>
                <Button Text="Zmień hasło" Clicked="changePassword"></Button>
                <Label x:Name="output" ></Label>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>