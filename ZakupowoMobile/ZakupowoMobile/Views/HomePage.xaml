<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZakupowoMobile.Views.HomePage">
    <ContentPage.Content >
        <Grid BackgroundColor="White"  >

            <Grid RowSpacing="20"  Margin="20,100,20,0" >
                <Grid.RowDefinitions >

                    <RowDefinition Height="60"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>

                </Grid.RowDefinitions>
                <Image Source="shopLogo.png" HeightRequest="60"/>
                <Entry Grid.Row="1" Placeholder="Adres email" PlaceholderColor="#bababa" FontSize="16"/>
                <Entry Grid.Row="2" Placeholder="Hasło" PlaceholderColor="#bababa" FontSize="16"/>
                <Button Text="Zaloguj się" x:Name ="signIn" BackgroundColor="#FFB24A"  CornerRadius="5" HeightRequest="50" VerticalOptions="Start" Grid.Row="3" Command="{Binding LoginCommand}"/>
                <Button  x:Name ="signUp"  HeightRequest="50" TextColor="White" BackgroundColor="#002447" CornerRadius="5"  Grid.Row="4"  VerticalOptions="Start"  Text="Zarejestruj się" ></Button>

            </Grid>

           
        </Grid>
    </ContentPage.Content>
</ContentPage>

